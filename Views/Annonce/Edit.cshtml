@model Express_Voitures.ViewModels.AnnonceViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="d-flex align-items-center gap-5 mb-2">Modification d'une annonce</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="VoitureId" class="control-label"></label>
                <select asp-for="VoitureId" class="form-control" asp-items="Model.Voitures"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoFilePath" class="control-label">Upload</label>
                <input asp-for="UploadedImage" class="form-control" type="file"/>
                <span asp-validation-for="PhotoFilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

