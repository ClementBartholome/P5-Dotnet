@model Express_Voitures.ViewModels.AnnonceViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <h2 class="text-uppercase body-highlight-m mb-3">Ajouter une annonce</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group required mb-4">
                    <label asp-for="VoitureId" class="control-label"></label>
                        @if (Model.Voitures != null && Model.Voitures.Any())
                        {
                            <select asp-for="VoitureId" class="form-control">
                            @foreach (var voiture in Model.Voitures)
                            {
                                <option value="@voiture.Value">@voiture.Text</option>
                            }
                            </select>
                        }
                        else
                        {
                            <p class="text-danger">Aucune voiture n'est disponible. Veuillez en ajouter une avant de cr√©er une annonce.</p>
                        }
                </div>
                <div class="form-group required mb-4">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Veuillez saisir une description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="PhotoFilePath" class="control-label">Ajouter une photo</label>
                    <input asp-for="UploadedImage" class="form-control" type="file"/>
                    <span asp-validation-for="PhotoFilePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-danger">Annuler</a>
                    @if (Model.Voitures != null && Model.Voitures.Any())
                    {
                        <input type="submit" value="Sauvegarder" class="btn btn-primary"/>
                    } 
                    else
                    {
                        <input type="submit" value="Sauvegarder" class="btn btn-primary disabled" aria-disabled="true" disabled/>
                    }
                </div>
            </form>
        </div>
    </div>

   

</div>