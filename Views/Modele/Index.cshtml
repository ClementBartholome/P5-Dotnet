@model IEnumerable<Express_Voitures.Models.Modele>

@{
ViewData["Title"] = "Liste des modèles";
}

<div class="container-sm">
    <h1>Liste des modèles</h1>

    <button class="button">
        <i class="bi bi-plus"></i>
        <a asp-action="Create">Créer un nouveau modèle</a>
    </button>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marque)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marque.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>