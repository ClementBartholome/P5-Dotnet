@using Microsoft.AspNetCore.Identity
@using Express_Voitures.Data
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bonjour @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  asp-area="Identity" method="post">
                <button class="nav-link btn btn-link text-dark" type="submit">Déconnexion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item d-flex">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Inscription</a>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Connexion</a>
        </li>
    }
</ul>



