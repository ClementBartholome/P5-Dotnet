@using Microsoft.AspNetCore.Identity
@using Express_Voitures.Data
@inject SignInManager<ApplicationUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item  ms-auto">
        <a class="nav-link text-dark btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Gérer mon compte">
            <i class="bi bi-person-fill"></i>
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })"
              asp-area="Identity" method="post">
            <button class="nav-link btn" type="submit"><i class="bi bi-box-arrow-right"></i> Déconnexion</button>
        </form>
    </li>
}
else
{
    <li class="nav-item d-flex">
        <a class="nav-link text-dark btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus-fill"></i> Inscription</a>
        <a class="nav-link text-dark btn btn-success" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
    </li>
}